extends header_user
block content
    .container
        .row
            .col-sm-12
                .crt_chall_h1
                    h1  Create Challenge 
            .col-sm-12
                .crt_chall_form
                    form#submit(action="/create_challenge", enctype="multipart/form-data",  method="post")
