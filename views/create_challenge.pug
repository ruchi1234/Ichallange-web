                                .clear
                        .clear
                        .col-sm-2
                            label Category 
                        .col-sm-4.col-sm-onset-6
                            .custom_select
                                select.select.category(name="category")
                                    option(selected disabled value='') Category
                                    option(value='tvshow') TV Show
                                    option(value='contest') Contest
                                    option(value='sports') Sports
                                    option(value='awardshow') Award Show
                                    option(value='other') Other
                                span.p5
                        .clear
                        .col-sm-2
                            label Series 
                        .col-sm-4.col-sm-onset-6
                            .custom_select
                                select.select.series(name="series")
                                    option(selected disabled value='') Series
