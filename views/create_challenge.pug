                                    option(value='once') Once
                                span.p6
                        .clear
                        .col-sm-2
                            label Entry 
                        .col-sm-4.col-sm-onset-6
                            .custom_select
                                select.select.entry(name="entry")
                                    option(selected disabled value='') Entry
                                    option(value='public') Public
                                    option(value='private') Private
                                span.p7
                        .clear
                        .col-sm-2
                            label Invities 
                        .col-sm-4.col-sm-onset-6
