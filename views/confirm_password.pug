
extends header
block content
  .container
    .row
      .col-sm-offset-3.col-sm-6.col-sm-onset-3
        .signin_form
          form(action="/lobbypage", name='confirm_password' method="post")
            h1  Confirm Password
            .login_form
              .col-sm-12
                div
                  input(type="password" name="email_new_password" id="email_new_password" placeholder="New Password")
                  span= span
              .col-sm-12
                div
                  input(type="password" name="email_confirm_password" id="email_confirm_password" placeholder="Confirm Password")
                  span= span
            
              .col-sm-12.login_submit
                div
                  button#confirm_password Next
              .clear

