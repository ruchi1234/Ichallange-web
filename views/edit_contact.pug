extends header_edit
block content
    .container
        .row
            .col-sm-offset-3.col-sm-6.col-sm-onset-3
                .signin_form
                    form(action="/contacts/update_contact/"+contacts.id, name='edit_contact_form' method="post")
                        h1  Edit Contact
                        .login_form
                            .col-sm-12
                                div
                                input#edit_contact_name(name='edit_contact_name', value= contacts.contact_name, type='text', tabindex='1', autofocus='')
                                span.contact_name
                            .col-sm-12
                                div
                                input#edit_contact_email(name='edit_contact_email', value= contacts.contact_email, type='email', tabindex='2')
                                span.contact_email
                            .col-sm-12
                                div
                                input#edit_contact_mobile(name='edit_contact_mobile', value= contacts.contact_mobile, type='text', tabindex='3')
                                span.contact_mobile
                            
                            .col-sm-12.login_submit
                                div
                                button#edit_contacts Update Contact
                            .clear