extends header
block content
  .container
    if messages.error
      .alert.alert-danger.failure-alert
        div= messages.error
    if messages.info
      .alert.alert-info.failure-alert
        div= messages.info
    if messages.success
      .alert.alert-success.failure-alert
        div= messages.success
  .container
    .row
      .col-sm-offset-3.col-sm-6.col-sm-onset-3
        .signin_form
          form(action="http://ec2-18-218-152-243.us-east-2.compute.amazonaws.com:8080/forgot_password/sendemail", name='forgot_password' method="get")
            h1  Forgot Password
            .login_form
              .col-sm-12
                div
                  input(type="text" name="email_forgot_password" id="email_forgot_password" autofocus=true placeholder="Username or Email")
                  span#forgotpassword1
                  span= span
            
              .col-sm-12.login_submit
                div
                  button#forgot_password Next
              .clear
